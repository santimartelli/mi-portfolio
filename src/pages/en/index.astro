---
import "@fontsource/titillium-web";
import Layout from "../../layouts/Layout.astro";
import NavbarWithTranslations from "../../components/NavbarWithTranslations";
import Projects from "../../components/Projects";
import AboutMe from "../../components/AboutMe";
import HeroWithTranslations from "../../components/HeroWithTranslations";
import Contact from "../../components/Contact";
import SocialCV from "../../components/SocialCV";
import Footer from "../../components/Footer";
import Divider from "../../components/Divider.astro";

// Cargar traducciones en ingl√©s
const heroTranslations = await import("../../content/en/hero.json");
const navbarTranslations = await import("../../content/en/navbar.json");

const translations = {
  hero: heroTranslations.default,
  navbar: navbarTranslations.default
};
---

<Layout
  title="Santiago Martelli | Programmer and Web Developer"
  description="Hello! I'm Santiago Martelli, a programmer and web developer with knowledge of HTML, CSS, JavaScript, Vue.js, PHP, Laravel, SQL and more. Available for work!">
  <main>
    <!-- Navbar -->
    <NavbarWithTranslations translations={translations} client:load />

    <!-- Hero section with translations -->
    <section id="home" class="relative">
      <HeroWithTranslations translations={translations} client:visible />
    </section>

    <Divider />

    <!-- About me section -->
    <section id="about" class="relative">
      <AboutMe client:visible />
    </section>

    <Divider />

    <!-- Projects section -->
    <section id="projects" class="relative">
      <Projects client:visible />
    </section>

    <Divider />

    <!-- Contact section -->
    <section id="contact" class="relative">
      <Contact client:visible />
    </section>

    <Divider />

    <!-- Social and CV section -->
    <SocialCV client:visible />

    <!-- Footer -->
    <Footer client:visible />
  </main>
</Layout>