---
interface Props {
  title: string;
  body: string;
  href: string;
  image: string;
}

const { href, title, body, image } = Astro.props;
---

<div class="border border-zinc-700 rounded-sm h-64 m-3">
  <a href={href} class="flex flex-col">
    <div class="h-32 pb-3 relative">
      <img src={image} alt={title} class="w-full h-full object-cover rounded-t-sm" />
      <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50">
        <h2 class="text-white">
          {title}
        </h2>
      </div>
    </div>
    <div class="h-32 flex justify-center items-center p-3">
      <p class="text-white">
        {body}
      </p>
    </div>
  </a>
</div>
